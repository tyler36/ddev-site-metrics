 *
 * 'loki.write.default.receiver' is defined in `alloy/ddev-loki.alloy`
 */
loki.process "alloy" {
  stage.labels {
    values = {
      service_name = "alloy",
    }
  }
  forward_to = [loki.write.default.receiver]
}
